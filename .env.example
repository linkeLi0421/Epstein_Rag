# ──────────────────────────────────────────────────────────────────────────────
# Epstein RAG System - Environment Variables
# Copy to .env and modify as needed: cp .env.example .env
# ──────────────────────────────────────────────────────────────────────────────

# ─── PostgreSQL ──────────────────────────────────────────────────────────────
POSTGRES_USER=epstein_rag
POSTGRES_PASSWORD=epstein_rag
POSTGRES_DB=epstein_rag
POSTGRES_PORT=5432

# ─── ChromaDB ────────────────────────────────────────────────────────────────
CHROMA_PORT=8000
CHROMA_COLLECTION=epstein_documents

# ─── MCP Server ──────────────────────────────────────────────────────────────
MCP_SERVER_PORT=8080
MCP_SERVER_NAME=epstein-rag
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
DEFAULT_TOP_K=5
LOG_LEVEL=INFO

# ─── Dashboard Backend ──────────────────────────────────────────────────────
DASHBOARD_BACKEND_PORT=8001
DASHBOARD_DEBUG=false
WS_HEARTBEAT_INTERVAL=30

# ─── Dashboard Frontend ─────────────────────────────────────────────────────
DASHBOARD_FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8001
VITE_WS_URL=ws://localhost:8001
